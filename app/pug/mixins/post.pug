mixin post(title, info, img, link)
  article.post 
    h2.post__title #{title}

    .post__info Desember 26, 2019 - 5 comments

    .post__img
      img(src="./img/posts-preview/" + img, alt="img post")

    .post_content 
      block
    
    .post__footer
      .post__readmore
        +button-read-more('read more', link)

      .post__share-icons
        include ./../sections/share-icons.pug